<div class="auth-wrapper">
  <div class="auth-container">
    <!-- Header -->
    <div class="auth-header">
      <!-- <img src="/images/logo.png" alt="HealthConnect" class="auth-logo"> -->
      <h1 class="auth-title">Welcome Back</h1>
      <p class="auth-subtitle">Secure access to your health records</p>
    </div>

    <!-- Login Form -->
    <form action="/auth/login" method="POST" class="auth-form">
      <div class="form-group">
        <label for="email">Email Address</label>
        <input type="email" id="email" name="email" required placeholder="your@example.com">
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required placeholder="••••••••">
      </div>

      <button type="submit" class="btn-primary">Log In</button>
    </form>

    <!-- Divider -->
    <div class="divider"><span>or</span></div>

    <!-- Social Login -->
    <div class="social-login">
      <a href="/auth/google" class="social-btn">
        <img src="https://upload.wikimedia.org/wikipedia/commons/4/4a/Logo_2013_Google.png" alt="Google">
        Continue with Google
      </a>
      <!-- <a href="/auth/facebook" class="social-btn">
        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b8/2021_Facebook_icon.svg/1024px-2021_Facebook_icon.svg.png" alt="Facebook">
        Continue with Facebook
      </a>
      <a href="/auth/twitter" class="social-btn">
        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/6f/Logo_of_Twitter.svg/512px-Logo_of_Twitter.svg.png" alt="Twitter">
        Continue with Twitter
      </a> -->
    </div>

    <!-- Footer -->
    <div class="auth-footer">
      <p>Don't have an account? <a href="/auth/register">Create one</a></p>
    </div>
  </div>
</div>