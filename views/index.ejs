  <!-- Main Content with beautiful animations -->
  <main>
    <div class="container">
      <div class="home-container">
        <!-- Animated decorative blobs for visual interest -->
        <div class="floating-shapes">
          <div class="blob b1"></div>
          <div class="blob b2"></div>
          <div class="blob b3"></div>
        </div>

        <!-- Hero Section -->
        <div class="hero">
          <!-- Logo and branding -->
          <div class="logo-section">
            <div class="logo-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
            <h3 class="brand-name" style="color: var(--accent-1); font-size: 1.4rem; margin: 0; font-weight: 700;"><%= typeof appName !== 'undefined' ? appName : 'HealthConnect' %></h3>
          </div>

          <!-- Main heading with gradient -->
          <h1 class="home-title">
            <span>Transform</span> Your Healthcare Experience
          </h1>

          <!-- Subtitle -->
          <p class="home-subtitle">
            Connect with trusted healthcare professionals and manage your health journey with our secure, 
            intuitive platform designed for modern healthcare needs.
          </p>

          <!-- Feature highlights -->
          <div class="features-preview">
            <div class="feature-item">
              <div class="icon-badge accent-1 pulse" aria-hidden="true">
                <svg class="feature-icon" viewBox="0 0 24 24"><path d="M12 17.3 6.2 20l1.1-6.4L2 9.7l6.5-.9L12 3l3.5 5.8 6.5.9-5.3 3.9L17.8 20z"/></svg>
              </div>
              <span>Secure & Private</span>
            </div>
            <div class="feature-item">
              <div class="icon-badge accent-2 pulse" aria-hidden="true">
                <svg class="feature-icon" viewBox="0 0 24 24"><path d="M13 10V3L4 14h7v7l9-11h-7z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
              </div>
              <span>Instant Connect</span>
            </div>
            <div class="feature-item">
              <div class="icon-badge accent-3 pulse" aria-hidden="true">
                <svg class="feature-icon" viewBox="0 0 24 24"><path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2M23 21v-2a4 4 0 00-3-3.87M16 3.13a4 4 0 010 7.75" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
              </div>
              <span>Expert Doctors</span>
            </div>
          </div>

          <!-- CTA Buttons -->
          <div class="home-buttons">
            <a href="/auth/register" class="btn-primary">
              <span>Get Started</span>
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                <path d="m9 18 6-6-6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
            <a href="/auth/login" class="btn-secondary">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                <path d="M15 3h4a2 2 0 012 2v14a2 2 0 01-2 2h-4M10 17l5-5-5-5M21 12H9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>Sign In</span>
            </a>
          </div>

          <!-- Trust indicators -->
          <div class="trust-indicators">
            <div class="trust-item">
              <div class="trust-number">500K+</div>
              <div class="trust-label">Patients Trust Us</div>
            </div>
            <div class="trust-item">
              <div class="trust-number">10K+</div>
              <div class="trust-label">Healthcare Providers</div>
            </div>
            <div class="trust-item">
              <div class="trust-number">99.9%</div>
              <div class="trust-label">Uptime Guarantee</div>
            </div>
          </div>
        </div>

        <!-- Preview card (shows on desktop) -->
        <div class="preview-card">
  <div class="preview-mock">
    <img src="\images\dashboard-preview.jpg" alt="Dashboard Preview" class="dashboard-preview-img">
  </div>
</div>

      </div>
    </div>
  </main>

 

</body>
