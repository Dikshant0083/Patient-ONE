        authorizedDoctors: dashboardData.accessList.filter(a => a.status === 'granted').length,
        totalSpent: dashboardData.paymentHistory.reduce((s, p) => s + p.amount, 0)
      });

      console.log('‚úÖ Dashboard cached');
    } catch (e) {
      console.error('‚ùå Cache error', e);
    }
  });

  // ===== LOAD CACHED DATA ON OFFLINE =====
  window.addEventListener('offline', async () => {
    console.log('üì¥ You are offline - loading cached data');
    
    // Show offline indicator
    showOfflineIndicator();
    
    // Load from cache
    const cachedRecords = await cache.getCachedMedicalRecords();
    const cachedAppointments = await cache.getCachedAppointments();
    const cachedStats = cache.getCachedDashboardStats();
    
    if (cachedRecords || cachedAppointments) {
      alert('You are offline. Showing cached data.');
    }
  });

  window.addEventListener('online', () => {
    console.log('üåê You are back online');
    hideOfflineIndicator();
    location.reload(); // Refresh to get latest data
  });

  // ===== OFFLINE INDICATOR =====
  function showOfflineIndicator() {
    const indicator = document.createElement('div');
    indicator.id = 'offline-indicator';
    indicator.style.cssText = `
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      background: #ef4444;
      color: white;
      text-align: center;
      padding: 0.75rem;
      font-weight: 600;
      z-index: 99999;
    `;
    indicator.innerHTML = '<i class="fas fa-wifi-slash"></i> You are offline - Showing cached data';
    document.body.appendChild(indicator);
  }

  function hideOfflineIndicator() {
    const indicator = document.getElementById('offline-indicator');
    if (indicator) indicator.remove();
  }

  // ===== PREFETCH DATA FOR FASTER NAVIGATION =====
  // Prefetch profile data on hover
  document.querySelector('a[href="/profile"]')?.addEventListener('mouseenter', async () => {
    const userPrefs = cache.getUserPreferences();
    console.log('üîÑ Prefetching profile data...', userPrefs);
  });

  // ===== SAVE USER PREFERENCES =====
  function saveUserPreference(key, value) {
    const prefs = cache.getUserPreferences();
    prefs[key] = value;
    cache.saveUserPreferences(prefs);
    console.log('üíæ Saved preference:', key, value);
  }

  // Example: Save theme preference
  // saveUserPreference('theme', 'dark');

