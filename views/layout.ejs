<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <% 
    // --- FIX: Prevent crash when title is undefined ---
    if (!title) { 
      title = "Healthcare Platform"; 
    }
  %>

  <title><%= title %> | Healthcare Platform</title>
  
  <!-- Main Layout CSS -->
  <link rel="stylesheet" href="/css/layout.css" />
  
  <!-- Page-specific CSS -->
  <% if (title === 'Login' || title === 'Register') { %>
    <link rel="stylesheet" href="/css/auth.css" />
  <% } %>

  <% if (title === 'Profile' || title === 'Your Profile') { %>
    <link rel="stylesheet" href="/css/profile.css" />
  <% } %>

  <!-- <% if (title === 'Home') { %>
    <link rel="stylesheet" href="/css/home.css" />
  <% } %> -->

  <% if (title && title.includes('Dashboard')) { %>
    <link rel="stylesheet" href="/css/dashboard.css" />
  <% } %>
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
</head>
<body>

  <!-- HEADER REMOVED - No more header strip -->

  <!-- Flash Messages -->
  <div class="container">
    <% if (messages && messages.error && messages.error.length > 0) { %>
      <% messages.error.forEach(function(msg) { %>
        <div class="alert-error"><%= msg %></div>
      <% }) %>
    <% } %>

    <% if (messages && messages.success && messages.success.length > 0) { %>
      <% messages.success.forEach(function(msg) { %>
        <div class="alert-success"><%= msg %></div>
      <% }) %>
    <% } %>
  </div>

  <!-- Page Content -->
  <main class="container">
    <%- body %>
  </main>

  <!-- Modern footer -->
  <!-- <footer>
    <div class="container">
      <p>&copy; <%= new Date().getFullYear() %> Doctor-Patient-Hub. Connecting healthcare, transforming lives.</p>
    </div>
  </footer> -->

</body>
</html>