<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %> | Healthcare Platform</title>
  
  <!-- Main Layout CSS -->
  <link rel="stylesheet" href="/css/layout.css" />
  
  <!-- Page-specific CSS -->
  <% if (title === 'Login' || title === 'Register') { %>
    <link rel="stylesheet" href="/css/auth.css" />
  <% } %>
  <% if (title === 'Profile' || title === 'Your Profile') { %>
    <link rel="stylesheet" href="/css/profile.css" />
  <% } %>
  <% if (title === 'Home') { %>
    <link rel="stylesheet" href="/css/home.css" />
  <% } %>
  <% if (title && title.includes('Dashboard')) { %>
    <link rel="stylesheet" href="/css/dashboard.css" />
  <% } %>
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
</head>
<body>

  <!-- Modern header with improved styling -->
  <header>
    <div class="container">
      <nav>
        <div>
          <a href="/">üè• HealthConnect</a>
        </div>
        <div>
          <% if (user) { %>
            <a href="/profile">Profile</a>
            <a href="/auth/logout">Logout</a>
          <% } else { %>
            <a href="/auth/login">Login</a>
            <a href="/auth/register">Register</a>
          <% } %>
        </div>
      </nav>
    </div>
  </header>

  <!-- Flash Messages with modern styling -->
  <div class="container">
    <% if (messages && messages.error && messages.error.length > 0) { %>
      <% messages.error.forEach(function(msg) { %>
        <div class="alert-error"><%= msg %></div>
      <% }) %>
    <% } %>
    <% if (messages && messages.success && messages.success.length > 0) { %>
      <% messages.success.forEach(function(msg) { %>
        <div class="alert-success"><%= msg %></div>
      <% }) %>
    <% } %>
  </div>

  <!-- Page Content -->
  <main class="container">
    <%- body %>
  </main>

  <!-- Modern footer -->
  <footer>
    <div class="container">
      <p>&copy; <%= new Date().getFullYear() %> HealthConnect. Connecting healthcare, transforming lives.</p>
    </div>
  </footer>

</body>
</html>
