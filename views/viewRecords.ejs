<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h2><%= title %></h2>
                
                <!-- Patient Information -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Patient Information</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Name:</strong> <%= patient.name || 'Not provided' %></p>
                        <p><strong>Email:</strong> <%= patient.email %></p>
                        <p><strong>Patient ID:</strong> <%= patient._id %></p>
                    </div>
                </div>

                <!-- Medical Records -->
                <div class="card">
                    <div class="card-header">
                        <h5>Medical Records</h5>
                    </div>
                    <div class="card-body">
                        <% if (records && records.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Title</th>
                                            <th>Description</th>
                                            <th>Upload Date</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% records.forEach(record => { %>
                                        <tr>
                                            <td><%= record.title %></td>
                                            <td><%= record.description || 'No description' %></td>
                                            <!-- FIXED: Handle undefined createdAt -->
                                            <td>
                                                <%= record.createdAt ? record.createdAt.toDateString() : 'Date not available' %>
                                            </td>
                                            <td>
                                                <a href="<%= record.fileUrl %>" 
                                                   class="btn btn-sm btn-primary" 
                                                   target="_blank">
                                                    View File
                                                </a>
                                            </td>
                                        </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="alert alert-info">
                                No medical records found for this patient.
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Navigation -->
                <div class="mt-4">
                    <% if (typeof isDoctor !== 'undefined' && isDoctor) { %>
                        <a href="/doctor/dashboard" class="btn btn-secondary">Back to Dashboard</a>
                    <% } else { %>
                        <a href="/patient/dashboard" class="btn btn-secondary">Back to Dashboard</a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

