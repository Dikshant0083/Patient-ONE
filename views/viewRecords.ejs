<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= title %></title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Load custom dashboard styles -->
  <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
  <div class="dashboard-wrapper">

    <!-- Patient Information -->
    <div class="dashboard-card">
      <h3 class="dashboard-header">Patient Information</h3>
      <p><strong>Name:</strong> <%= patient.name || 'Not provided' %></p>
      <p><strong>Email:</strong> <%= patient.email %></p>
      <p><strong>Patient ID:</strong> <%= patient._id %></p>
    </div>

    <!-- Medical Records -->
    <div class="dashboard-card">
      <h3 class="dashboard-header">Medical Records</h3>
      <% if (records && records.length > 0) { %>
        <div class="table-wrapper">
          <table>
            <thead>
              <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Upload Date</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% records.forEach(record => { %>
              <tr>
                <td><%= record.title %></td>
                <td><%= record.description || 'No description' %></td>
                <td><%= record.createdAt ? record.createdAt.toDateString() : 'Date not available' %></td>
                <td>
                  <a href="<%= record.fileUrl %>" class="btn-view" target="_blank">View File</a>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="alert-info">No medical records found for this patient.</div>
      <% } %>
    </div>

    <!-- Navigation -->
    <div class="dashboard-card">
      <% if (typeof isDoctor !== 'undefined' && isDoctor) { %>
        <a href="/doctor/dashboard" class="btn-secondary">Back to Dashboard</a>
      <% } else { %>
        <a href="/patient/dashboard" class="btn-secondary">Back to Dashboard</a>
      <% } %>
    </div>

  </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
