<!DOCTYPE html>
<html lang="en">
<head>
    <title>Doctor Dashboard</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background: #f8fafc;
        }

        /* SIDEBAR STYLES */
        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            width: 250px;
            height: 100vh;
            background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
            padding: 2rem 1rem;
            overflow-y: auto;
            z-index: 1000;
            box-shadow: 2px 0 8px rgba(0,0,0,0.1);
        }

        .sidebar-logo {
            text-align: center;
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        .sidebar-logo img {
            width: 50px;
            height: 50px;
            object-fit: contain;
            margin-bottom: 0.5rem;
        }

        .sidebar-logo p {
            color: #cbd5e1;
            font-size: 0.75rem;
            margin-top: 0.25rem;
        }

        .sidebar-nav {
            list-style: none;
        }

        .sidebar-nav li {
            margin-bottom: 0.5rem;
        }

        .sidebar-nav a {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 0.75rem 1rem;
            color: #cbd5e1;
            text-decoration: none;
            border-radius: 0.5rem;
            transition: all 0.3s ease;
            font-size: 0.95rem;
        }

        .sidebar-nav a:hover {
            background: rgba(6, 182, 212, 0.1);
            color: #06b6d4;
        }

        .sidebar-nav a.active {
            background: #06b6d4;
            color: white;
            font-weight: 600;
        }

        .sidebar-nav i {
            width: 20px;
            text-align: center;
        }

        /* MAIN LAYOUT */
        .main-container {
            display: flex;
            min-height: 100vh;
        }

        .content-wrapper {
            margin-left: 250px;
            width: calc(100% - 250px);
            padding: 0;
            overflow-x: hidden;
        }

        /* HEADER */
        .dashboard-header {
            background: white;
            padding: 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
            gap: 1rem;
        }

        .dashboard-header h1 {
            font-size: 1.75rem;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 0.25rem;
        }

        .dashboard-header p {
            color: #6b7280;
            font-size: 0.95rem;
            margin-bottom: 0;
        }

        .header-user {
            display: flex;
            align-items: center;
            gap: 1rem;
            min-width: fit-content;
        }

        .user-avatar {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background: linear-gradient(135deg, #06b6d4, #0891b2);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            font-size: 1.2rem;
        }

        /* ALERTS */
        .alert {
            margin: 1rem;
            border: none;
            border-radius: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            animation: slideIn 0.3s ease;
        }

        @keyframes slideIn {
            from { transform: translateY(-20px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        /* STATS CONTAINER */
        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            padding: 1.5rem;
        }

        .stat-card {
            background: white;
            padding: 1.5rem;
            border-radius: 0.75rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
            border: 1px solid #e5e7eb;
            transition: all 0.3s ease;
            text-align: center;
        }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.1);
        }

        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            font-size: 1.5rem;
        }

        .stat-icon.green { background: #dcfce7; color: #166534; }
        .stat-icon.purple { background: #f3e8ff; color: #6b21a8; }
        .stat-icon.blue { background: #dbeafe; color: #1e40af; }
        .stat-icon.orange { background: #fed7aa; color: #b45309; }

        .stat-number {
            font-size: 2rem;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 0.5rem;
        }

        .stat-label {
            color: #6b7280;
            font-size: 0.9rem;
        }

        /* REQUEST FORM */
        .request-section {
            padding: 0 1.5rem 1.5rem;
        }

        .request-form {
            background: white;
            padding: 1.5rem;
            border-radius: 0.75rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
            border: 1px solid #e5e7eb;
        }

        .request-form-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .request-form-title i {
            color: #06b6d4;
        }

        .form-row-custom {
            display: grid;
            grid-template-columns: 1fr auto;
            gap: 1rem;
            align-items: flex-end;
        }

        .request-form select {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1px solid #e5e7eb;
            border-radius: 0.5rem;
            font-family: inherit;
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }

        .request-form select:focus {
            outline: none;
            border-color: #06b6d4;
            box-shadow: 0 0 0 3px rgba(6, 182, 212, 0.1);
        }

        .request-btn {
            background: linear-gradient(135deg, #06b6d4, #0891b2);
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            border: none;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 0.95rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            white-space: nowrap;
            min-width: fit-content;
        }

        .request-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(6, 182, 212, 0.3);
        }

        /* DASHBOARD CARD */
        .dashboard-card {
            background: white;
            margin: 0 1.5rem 1.5rem;
            padding: 1.5rem;
            border-radius: 0.75rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
            border: 1px solid #e5e7eb;
        }

        .card-header-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: #1f2937;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .card-title i {
            color: #06b6d4;
        }

        .view-all-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: #dbeafe;
            color: #1e40af;
            text-decoration: none;
            border-radius: 0.4rem;
            font-weight: 600;
            font-size: 0.85rem;
            transition: all 0.3s ease;
        }

        .view-all-btn:hover {
            background: #bfdbfe;
            color: #1e40af;
        }

        /* PATIENTS GRID */
        .patients-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
            gap: 1.5rem;
        }

        .patient-card {
            background: #f9fafb;
            border-radius: 0.75rem;
            padding: 1.5rem;
            text-align: center;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
            transition: all 0.3s ease;
            border: 1px solid #e5e7eb;
        }

        .patient-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.1);
            background: white;
        }

        .patient-avatar {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: linear-gradient(135deg, #06b6d4, #0891b2);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            font-size: 1.5rem;
            margin: 0 auto 1rem;
        }

        .patient-name {
            font-size: 1.1rem;
            font-weight: 600;
            color: #1f2937;
            margin-bottom: 0.25rem;
            word-break: break-word;
        }

        .patient-email {
            color: #6b7280;
            font-size: 0.85rem;
            margin-bottom: 1rem;
            word-break: break-all;
        }

        .access-badge {
            display: inline-block;
            padding: 0.4rem 0.8rem;
            border-radius: 0.4rem;
            font-weight: 600;
            font-size: 0.8rem;
            margin-bottom: 1rem;
        }

        .badge-granted {
            background: #dcfce7;
            color: #166534;
        }

        .badge-pending {
            background: #fef3c7;
            color: #92400e;
        }

        .patient-actions {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            margin-bottom: 1rem;
        }

        .patient-btn {
            padding: 0.6rem 1rem;
            border-radius: 0.4rem;
            border: none;
            font-weight: 600;
            font-size: 0.85rem;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .btn-records {
            background: #dbeafe;
            color: #1e40af;
        }

        .btn-records:hover {
            background: #bfdbfe;
            transform: translateY(-2px);
        }

        .btn-chat {
            background: #e0e7ff;
            color: #3730a3;
        }

        .btn-chat:hover {
            background: #c7d2fe;
            transform: translateY(-2px);
        }

        .granted-date {
            color: #9ca3af;
            font-size: 0.85rem;
            margin-top: 1rem;
            margin-bottom: 0;
        }

        /* EMPTY STATE */
        .empty-state {
            text-align: center;
            padding: 2rem 1rem;
        }

        .empty-icon {
            font-size: 3rem;
            color: #d1d5db;
            margin-bottom: 1rem;
        }

        .empty-text {
            color: #6b7280;
            font-size: 1rem;
        }

        /* FOOTER */
        .footer-nav {
            display: flex;
            gap: 1rem;
            padding: 1.5rem;
            justify-content: center;
        }

        .nav-btn {
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.95rem;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
        }

        .nav-btn.profile {
            background: #dbeafe;
            color: #1e40af;
        }

        .nav-btn.profile:hover {
            background: #bfdbfe;
            transform: translateY(-2px);
        }

        .nav-btn.logout {
            background: #fee2e2;
            color: #991b1b;
        }

        .nav-btn.logout:hover {
            background: #fecaca;
            transform: translateY(-2px);
        }

        /* TOGGLE BUTTON FOR MOBILE */
        .sidebar-toggle {
            display: none;
            background: none;
            border: none;
            color: #1f2937;
            font-size: 1.5rem;
            cursor: pointer;
            padding: 0.5rem;
        }

        /* RESPONSIVE DESIGN */
        @media (max-width: 1024px) {
            .sidebar {
                width: 220px;
            }

            .content-wrapper {
                margin-left: 220px;
                width: calc(100% - 220px);
            }

            .dashboard-header {
                padding: 1.25rem;
            }

            .sidebar-nav a {
                font-size: 0.9rem;
            }

            .patients-grid {
                grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
            }

            .stats-container {
                grid-template-columns: repeat(2, 1fr);
            }

            .form-row-custom {
                grid-template-columns: 1fr auto;
            }
        }

        @media (max-width: 768px) {
            .sidebar {
                position: fixed;
                left: -250px;
                transition: left 0.3s ease;
                width: 250px;
                z-index: 1001;
            }

            .sidebar.active {
                left: 0;
            }

            .content-wrapper {
                margin-left: 0;
                width: 100%;
            }

            .sidebar-toggle {
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .dashboard-header {
                flex-wrap: wrap;
                gap: 1rem;
                padding: 1rem;
            }

            .dashboard-header h1 {
                font-size: 1.5rem;
            }

            .dashboard-header p {
                font-size: 0.85rem;
            }

            .header-user {
                width: 100%;
                justify-content: space-between;
                gap: 0.5rem;
            }

            .header-user div:first-child {
                min-width: 0;
                flex: 1;
            }

            .header-user p {
                font-size: 0.95rem;
                margin-bottom: 0;
            }

            .user-avatar {
                width: 40px;
                height: 40px;
                font-size: 1rem;
                flex-shrink: 0;
            }

            .stats-container {
                grid-template-columns: repeat(2, 1fr);
                gap: 1rem;
                padding: 1rem;
            }

            .stat-card {
                padding: 1rem;
            }

            .stat-number {
                font-size: 1.5rem;
            }

            .request-section {
                padding: 0 1rem 1rem;
            }

            .request-form {
                padding: 1rem;
            }

            .request-form-title {
                font-size: 1.1rem;
                margin-bottom: 1rem;
            }

            .form-row-custom {
                grid-template-columns: 1fr;
                gap: 0.75rem;
            }

            .request-btn {
                width: 100%;
                padding: 0.7rem 1rem;
            }

            .dashboard-card {
                margin: 0 1rem 1rem;
                padding: 1rem;
            }

            .card-header-section {
                flex-direction: column;
                align-items: flex-start;
                gap: 0.75rem;
                margin-bottom: 1rem;
            }

            .card-title {
                font-size: 1.1rem;
            }

            .view-all-btn {
                width: 100%;
            }

            .patients-grid {
                grid-template-columns: 1fr;
            }

            .patient-card {
                padding: 1.25rem;
            }

            .footer-nav {
                flex-direction: column;
                gap: 0.75rem;
                padding: 1rem;
            }

            .nav-btn {
                width: 100%;
                justify-content: center;
            }

            .alert {
                margin: 0.75rem;
            }
        }

        @media (max-width: 480px) {
            .dashboard-header h1 {
                font-size: 1.25rem;
            }

            .dashboard-header p {
                font-size: 0.8rem;
            }

            .stats-container {
                grid-template-columns: 1fr;
                gap: 0.75rem;
                padding: 0.75rem;
            }

            .stat-number {
                font-size: 1.25rem;
            }

            .stat-label {
                font-size: 0.8rem;
            }

            .request-form-title {
                font-size: 1rem;
            }

            .card-title {
                font-size: 1rem;
            }

            .patient-card {
                padding: 1rem;
            }

            .patient-avatar {
                width: 50px;
                height: 50px;
                font-size: 1.25rem;
            }

            .patient-name {
                font-size: 1rem;
            }

            .patient-email {
                font-size: 0.8rem;
            }

            .patient-btn {
                font-size: 0.8rem;
                padding: 0.5rem 0.75rem;
            }

            .nav-btn {
                padding: 0.6rem 1rem;
                font-size: 0.85rem;
            }

            .access-badge {
                font-size: 0.75rem;
                padding: 0.3rem 0.6rem;
            }
        }
    </style>
</head>
<body>

<div class="main-container">
    <!-- SIDEBAR -->
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-logo">
            <img src="/images/new-design__2_-removebg-preview.png" alt="MediCare Logo">
            <p>Doctor Portal</p>
        </div>

        <ul class="sidebar-nav">
            <li><a href="/doctor/dashboard" class="active"><i class="fas fa-home"></i> Dashboard</a></li>
            <li><a href="/doctor/appointments"><i class="fas fa-calendar-alt"></i> Appointments</a></li>
            <li><a href="/profile"><i class="fas fa-user"></i> My Profile</a></li>
            <li><a href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
        </ul>
    </aside>

    <!-- CONTENT -->
    <div class="content-wrapper">
        <!-- Header -->
        <div class="dashboard-header">
            <button class="sidebar-toggle" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
            <div>
                <h1>Dashboard</h1>
                <p>Welcome to your doctor portal</p>
            </div>
            <div class="header-user">
                <div>
                    <p style="margin-bottom: 0; font-weight: 600;">Dr. <%= user.name || user.email %></p>
                    <small style="color: #9ca3af;">Medical Professional</small>
                </div>
                <div class="user-avatar">
                    <%= (user.name || user.email).charAt(0).toUpperCase() %>
                </div>
            </div>
        </div>

        <!-- Flash Messages -->
        <% if (messages && messages.error && messages.error.length > 0) { %>
            <% messages.error.forEach(error => { %>
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle"></i> <%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% }) %>
        <% } %>

        <% if (messages && messages.success && messages.success.length > 0) { %>
            <% messages.success.forEach(success => { %>
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i> <%= success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% }) %>
        <% } %>

        <!-- Stats -->
        <div class="stats-container">
            <div class="stat-card">
                <div class="stat-icon green"><i class="fas fa-user-check"></i></div>
                <div class="stat-number"><%= accessList ? accessList.length : 0 %></div>
                <div class="stat-label">Authorized Patients</div>
            </div>

            <div class="stat-card">
                <div class="stat-icon purple"><i class="fas fa-hourglass-half"></i></div>
                <div class="stat-number"><%= pendingRequests ? pendingRequests.length : 0 %></div>
                <div class="stat-label">Pending Requests</div>
            </div>

            <div class="stat-card">
                <div class="stat-icon blue"><i class="fas fa-users"></i></div>
                <div class="stat-number"><%= allPatients ? allPatients.length : 0 %></div>
                <div class="stat-label">Total Patients</div>
            </div>

            <div class="stat-card">
                <div class="stat-icon orange"><i class="fas fa-file-medical"></i></div>
                <div class="stat-number"><%= accessList.length > 0 ? 'Ready' : 'N/A' %></div>
                <div class="stat-label">Status</div>
            </div>
        </div>

        <!-- Request Access Section -->
        <div class="request-section">
            <div class="request-form">
                <h3 class="request-form-title">
                    <i class="fas fa-paper-plane"></i> Request Access to Patient Records
                </h3>
                <form method="POST" id="requestForm">
                    <div class="form-row-custom">
                        <div>
                            <label class="form-label" style="margin-bottom: 0.5rem; font-weight: 600; display: block;">Select Patient</label>
                            <select name="patientId" id="patientSelect" required>
                                <option value="">Choose a patient...</option>
                                <% if (allPatients && allPatients.length > 0) { %>
                                    <% allPatients.forEach(patient => { %>
                                        <% const hasAccess = accessList.find(a => a.patientId._id.toString() === patient._id.toString()); %>
                                        <% if (!hasAccess) { %>
                                            <option value="<%= patient._id %>"><%= patient.name || patient.email %></option>
                                        <% } %>
                                    <% }) %>
                                <% } %>
                            </select>
                        </div>
                        <button type="submit" class="request-btn">
                            <i class="fas fa-send"></i> Request
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Patients with Granted Access -->
        <div class="dashboard-card">
            <div class="card-header-section">
                <h2 class="card-title"><i class="fas fa-user-check"></i> My Patients</h2>
                <a href="/doctor/appointments" class="view-all-btn">
                    <i class="fas fa-calendar-alt"></i> View Appointments
                </a>
            </div>

            <% if (accessList && accessList.length > 0) { %>
                <div class="patients-grid">
                    <% accessList.forEach(access => { %>
                        <div class="patient-card">
                            <div class="patient-avatar">
                                <%= (access.patientId.name || access.patientId.email).charAt(0).toUpperCase() %>
                            </div>

                            <h3 class="patient-name"><%= access.patientId.name || 'Patient' %></h3>
                            <p class="patient-email"><%= access.patientId.email %></p>

                            <span class="access-badge badge-granted">✓ Access Granted</span>

                            <div class="patient-actions">
                                <a href="/records/patient/<%= access.patientId._id %>" class="patient-btn btn-records">
                                    <i class="fas fa-file-medical"></i> View Records
                                </a>
                                <a href="/chat/doctor/<%= access.patientId._id %>" class="patient-btn btn-chat">
                                    <i class="fas fa-comments"></i> Chat
                                </a>
                            </div>

                            <p class="granted-date">
                                <i class="fas fa-calendar-check"></i> 
                                Access since <%= new Date(access.grantedAt).toLocaleDateString() %>
                            </p>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <div class="empty-icon"><i class="fas fa-user-slash"></i></div>
                    <p class="empty-text">No patients have granted access yet</p>
                </div>
            <% } %>
        </div>

        <!-- Pending Access Requests -->
        <% if (pendingRequests && pendingRequests.length > 0) { %>
            <div class="dashboard-card">
                <div class="card-header-section">
                    <h2 class="card-title"><i class="fas fa-hourglass-half"></i> Pending Requests</h2>
                </div>

                <div class="patients-grid">
                    <% pendingRequests.forEach(request => { %>
                        <div class="patient-card">
                            <div class="patient-avatar">
                                <%= (request.patientId.name || request.patientId.email).charAt(0).toUpperCase() %>
                            </div>

                            <h3 class="patient-name"><%= request.patientId.name || 'Patient' %></h3>
                            <p class="patient-email"><%= request.patientId.email %></p>

                            <span class="access-badge badge-pending">⏱ Pending</span>

                            <p style="color: #6b7280; font-size: 0.9rem; margin-top: 1rem;">
                                <i class="fas fa-clock"></i> Waiting for patient approval
                            </p>
                        </div>
                    <% }) %>
                </div>
            </div>
        <% } %>

        <!-- Footer Navigation -->
        <div class="footer-nav">
            <a href="/profile" class="nav-btn profile">
                <i class="fas fa-user"></i> My Profile
            </a>
            <a href="/auth/logout" class="nav-btn logout">
                <i class="fas fa-sign-out-alt"></i> Logout
            </a>
        </div>

    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Sidebar toggle functionality
    const sidebarToggle = document.getElementById('sidebarToggle');
    const sidebar = document.getElementById('sidebar');

    sidebarToggle.addEventListener('click', function() {
        sidebar.classList.toggle('active');
    });

    // Close sidebar when clicking outside
    document.addEventListener('click', function(event) {
        const isClickInsideSidebar = sidebar.contains(event.target);
        const isClickOnToggle = sidebarToggle.contains(event.target);
        
        if (!isClickInsideSidebar && !isClickOnToggle && sidebar.classList.contains('active')) {
            sidebar.classList.remove('active');
        }
    });

    // Close sidebar on nav link click
    document.querySelectorAll('.sidebar-nav a').forEach(link => {
        link.addEventListener('click', function() {
            if (window.innerWidth <= 768) {
                sidebar.classList.remove('active');
            }
        });
    });

    // Handle request form submission
    document.getElementById('requestForm').addEventListener('submit', function(e) {
        e.preventDefault();
        const patientId = document.getElementById('patientSelect').value;
        if (patientId) {
            this.action = `/doctor/request/${patientId}`;
            this.submit();
        }
    });

    // Active link highlighting
    document.querySelectorAll('.sidebar-nav a').forEach(link => {
        if (link.href === window.location.href) {
            link.classList.add('active');
        }
    });
</script>

</body>
</html>